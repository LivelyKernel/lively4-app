{
  "name": "lively4-app",
  "version": "1.0.0",
  "description": "Run lively locally",
  "main": "index.js",
  "repository": "https://github.com/LivelyKernel/lively4-app.git",
  "author": "Benjamin Feldmann <benjamin-feldmann@web.de>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "build",
    "pack": "build --dir",
    "setup": "yarn run init-submodules && yarn run install-submodules",
    "init-submodules":"git submodule init && cd lively4-server && git submodule init && cd ../ && git submodule update --recursive",
    "install-submodules": "yarn && cd lively4-server && yarn && cd ../lively4/lively4-core && yarn",
    "test-server": "node lively4-server/dist/httpServer.js --server=\"lively4-server/\" --port=\"8080\" --index-files=\"true\" --directory=\"lively4/\" --auto-commit=\"true\""
  },
  "build": {
    "appId": "lively4.app",
    "win": {
      "icon": "build/icon"
    },
    "mac": {
      "category": "public.app-category.business",
      "icon": "icon"
    },
    "directories": {
    },
    "asar": false
  },
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^19.45.4"
  }
}
